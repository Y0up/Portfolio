{% extends 'base.html.twig' %}

{% block title %}Photo index
{% endblock %}

{% block body %}
	<h1>Photo index</h1>

	{% for photo in photos %}
		<article>
			<img src="{{ photo.image }}" alt="">
			<h1>{{ photo.title }}</h1>
			<h2>{{ photo.address }}</h2>
			<h3>
				{% for setting in photo.setting %}
					{{ setting.iso }}
				{% endfor %}
			</h3>
			<h3>
				{% for setting in photo.setting %}
					{{ setting.shutter }}
				{% endfor %}
			</h3>
			<h3>
				{% for setting in photo.setting %}
					{{ setting.focal }}
				{% endfor %}
			</h3>
			<p>{{ photo.description }}</p>
			<a href="{{ path('photo_show', {'id': photo.id}) }}">show</a>
			<a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
		</article>
	{% endfor %}

	<a href="{{ path('photo_new') }}">Create new</a>
{% endblock %}
