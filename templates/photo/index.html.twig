{% extends 'base.html.twig' %}

{% block title %}Photo index
{% endblock %}

{% block body %}
	<section>
		{% for photo in photos %}
			<article>
				<div class="photo">
					<img class="img" src="{{ photo.image }}" alt="">
					<div id="content">
						<div>
							<h2>{{ photo.title }}</h1>
						</div>
						<div>
							<p>{{ photo.description }}</p>
						</div>
						<div class="footer">
							<p>
								{% for setting in photo.setting %}
									{{ setting.iso }}
								{% endfor %}
							</p>
							<p>
								{% for setting in photo.setting %}
									{{ setting.shutter }}
								{% endfor %}
							</p>
							<p>
								{% for setting in photo.setting %}
									{{ setting.focal }}
								{% endfor %}
							</p>
						</div>
					</div>
				</div>
				<p class="adress">{{ photo.address }},
					{{ photo.country.name}}</p>
			</article>
		{% endfor %}

		<a href="{{ path('photo_new') }}">Create new</a>
	</section>
{% endblock %}
