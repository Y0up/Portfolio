{% extends 'base.html.twig' %}

{% block title %}Photo index
{% endblock %}

{% block body %}
	<section>
		<h1>Photo index</h1>

		{% for photo in photos %}
			<article>
				<img src="{{ photo.image }}" alt="">
				<h2>{{ photo.title }}</h1>
				<h3>{{ photo.address }}</h2>
				<h4>
					{% for setting in photo.setting %}
						{{ setting.iso }}
					{% endfor %}
				</h4>
				<h4>
					{% for setting in photo.setting %}
						{{ setting.shutter }}
					{% endfor %}
				</h4>
				<h4>
					{% for setting in photo.setting %}
						{{ setting.focal }}
					{% endfor %}
				</h4>
				<p>{{ photo.description }}</p>
				<a href="{{ path('photo_show', {'id': photo.id}) }}">show</a>
				<a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
			</article>
		{% endfor %}

		<a href="{{ path('photo_new') }}">Create new</a>
	</section>
{% endblock %}
